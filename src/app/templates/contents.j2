{% extends "inc/base.j2" %}
{% block content %}
  <div class="menu">
    <h3>Learning Content</h3>
  </div>
  <br>


  {% for c in contents %}

    <section class="container">
      <h4>{{ c.title }}</h4>
      <a href="{{ c.link }}">{{ c.link }}</a><br>

      {% for tag in c.content_tags %}
        <b>{{ tag }}</b>
      {% endfor %}<br>

      {% for tag in c.system_tags %}
        <b>{{ tag }}</b>
      {% endfor %}


      {% if c.finished_at %}
        finished_at: {{ c.finished_at | dt }}
      {% else %}
        <a href="/finish/{{ c.id }}">finish</a>
      {% endif %}

      <hr>
    </section>

  {% endfor %}


{% endblock %}
